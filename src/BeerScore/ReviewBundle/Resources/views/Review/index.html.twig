{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reviews list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Username</th>
                <th>Aromascore</th>
                <th>Appearancescore</th>
                <th>Tastescore</th>
                <th>Palatescore</th>
                <th>Overallscore</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td><a href="{{ path('review_show', { 'id': review.id }) }}">{{ review.id }}</a></td>
                <td>{{ review.title }}</td>
                <td>{{ review.content }}</td>
                <td>{{ review.userName }}</td>
                <td>{{ review.aromaScore }}</td>
                <td>{{ review.appearanceScore }}</td>
                <td>{{ review.tasteScore }}</td>
                <td>{{ review.palateScore }}</td>
                <td>{{ review.overallScore }}</td>
                <td>{% if review.createdAt %}{{ review.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if review.updatedAt %}{{ review.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('review_show', { 'id': review.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('review_edit', { 'id': review.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('review_new') }}">Create a new review</a>
        </li>
    </ul>
{% endblock %}
