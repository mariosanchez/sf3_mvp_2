{% extends 'BeerScoreBundle::base.html.twig' %}

{% block body %}
    <h1>{{ beer.name }}</h1>

    {% include 'BeerScoreBundle:Beer:detail.html.twig' %}

    <div class="row">
        <div class="col s12">
            <h4>Reviews ({{ beer.reviews|length }})</h4>
        </div>
    </div>
    {% for review in beer.reviews %}
        {% include 'BeerScoreBundle:Review:detail.html.twig' %}
    {% endfor %}
    <div class="row">
        <div class="col s12">
            <a class="waves-effect waves-light btn" href="{{ path('beer_add_review', { 'id': beer.id }) }}">Add review</a>
        </div>
    </div>

    <div class="row">
        <div class="col s2">
            <a class="waves-effect waves-light btn" href="{{ path('beer_index') }}">Back to the list</a>
        </div>
        <div class="col s1">
            <a class="waves-effect waves-light btn" href="{{ path('beer_edit', { 'id': beer.id }) }}">Edit</a>
        </div>
        <div class="col s1">
            {{ form_start(delete_form) }}
            <input class="waves-effect waves-light btn red" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
